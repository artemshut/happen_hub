<%= turbo_frame_tag dom_id(comment) do %>
  <div class="mb-4 border-b pb-2">
    <p class="text-sm text-gray-600"><strong><%= comment.user.first_name || "Anonymous" %></strong> wrote:</p>
    <p class="text-gray-800"><%= comment.content %></p>
    <p class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <div class="mt-3 flex items-center gap-2 w-full">
    <% if comment.user == current_user %>
      <div class="flex justify-end space-x-4 text-sm mt-2">
        <%= link_to "Edit", edit_event_comment_path(comment.event, comment), data: { turbo_frame: dom_id(comment) }, class: "text-blue-500 hover:underline" %>
        <%= link_to "Delete", event_comment_path(comment.event, comment), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this comment?" }, class: "text-red-500 hover:underline" %>
      </div>
    <% end %>
  </div>
<% end %>