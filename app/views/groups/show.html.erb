<h1 class="text-3xl font-bold mb-6 text-accent-red"><%= @group.name %></h1>

<p class="text-gray-700 mb-4">Description:</p>
<div class="border border-gray-300 rounded p-4 mb-6">
  <p class="text-gray-700"><%= @group.description.presence || "No description provided." %></p>
</div>

<h2 class="text-2xl font-semibold mb-4">Group Members</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @members.each do |member| %>
    <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
      <p class="text-lg font-semibold text-gray-700"><%= member.first_name %> <%= member.last_name %></p>
      <p class="text-sm text-gray-500">Tag: <%= member.tag %></p>
    </div>
  <% end %>
</div>

<div class="text-right mt-6">
  <%= link_to 'Edit Group', edit_group_path(@group), class: "bg-accent-red text-white px-6 py-2 rounded hover:bg-red-600" %>
</div>