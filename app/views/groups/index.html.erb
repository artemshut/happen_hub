<h1 class="text-3xl font-bold mb-6">Your Groups</h1>

<% if @groups.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @groups.each do |group| %>
      <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
        <h2 class="text-xl font-semibold text-accent-red mb-2">
          <%= link_to group.name, group_path(group), class: "hover:underline" %>
        </h2>
        <p class="text-gray-600 mb-4">Members: <%= group.users.count %></p>
        <p class="text-gray-600 mb-4">Description: <%= group.description.presence || "No description provided." %></p>
        <div class="mt-4">
          <%= link_to 'View Group', group_path(group), class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
          <%= link_to 'Edit Group', edit_group_path(group), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400 ml-2" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-700">You have no groups at the moment. <%= link_to 'Create a Group', new_group_path, class: "text-accent-red hover:underline" %>.</p>
<% end %>