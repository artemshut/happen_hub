<h1 class="text-3xl font-bold mb-6">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <!-- Groups Section -->
  <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
    <h2 class="text-xl font-semibold text-accent-red mb-2">Your Groups</h2>
    <p class="text-gray-600 mb-4">Manage your groups and their members.</p>
    <%= link_to 'View Groups', groups_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
  </div>

  <!-- Events Section -->
  <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
    <h2 class="text-xl font-semibold text-accent-red mb-2">Your Events</h2>
    <p class="text-gray-600 mb-4">Check out your upcoming events or create a new one.</p>
    <%= link_to 'View Events', events_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
  </div>

  <!-- Friends Section -->
  <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
    <h2 class="text-xl font-semibold text-accent-red mb-2">Your Friends</h2>
    <p class="text-gray-600 mb-4">Manage your friend list or add new connections.</p>
    <%= link_to 'View Friends', friendships_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
  </div>
</div>

<!-- Quick Actions Section -->
<div class="mt-8">
  <h2 class="text-2xl font-semibold mb-4">Quick Actions</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Create a Group</h3>
      <%= link_to 'New Group', new_group_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
    </div>
    <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Create an Event</h3>
      <%= link_to 'New Event', new_event_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
    </div>
    <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Search for Friends</h3>
      <%= link_to 'Find Friends', friendships_path, class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
    </div>
  </div>
</div>

<div id="calendar"></div>
