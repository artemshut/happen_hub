<div class="min-h-[80vh] flex items-center justify-center px-44">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-xs">
    <h1 class="text-xl font-bold text-center text-gray-800 mb-6">Forgot Your Password?</h1>
    <%= form_with model: resource, url: password_path(resource_name), local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, "Email Address", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-accent-red focus:border-accent-red" %>
      </div>

      <div>
        <%= f.submit "Send Reset Instructions", class: "w-full bg-accent-red text-white font-bold py-2 px-4 rounded-lg hover:bg-red-600" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Remembered your password?
        <%= link_to "Log In", new_user_session_path, class: "text-accent-red hover:underline font-medium" %>
      </p>
    </div>
  </div>
</div>
