<h1 class="text-3xl font-bold mb-6">Your Events</h1>

<% if @events.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @events.each do |event| %>
      <div class="border border-gray-300 rounded-lg shadow-md p-4 bg-white">
        <h2 class="text-xl font-semibold text-accent-red mb-2">
          <%= link_to event.title, event_path(event), class: "hover:underline" %>
        </h2>
        <p class="text-gray-600 mb-2">Date: <%= event.start_time %></p>
        <p class="text-gray-600 mb-2">Location: <%= event.location %></p>
        <div class="mt-4">
          <%= link_to 'View Details', event_path(event), class: "bg-accent-red text-white px-4 py-2 rounded hover:bg-red-600" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-700">You have no events at the moment. <%= link_to 'Create an Event', new_event_path, class: "text-accent-red hover:underline" %>.</p>
<% end %>