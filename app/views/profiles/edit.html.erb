<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white rounded-lg shadow-lg p-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 mb-2">Edit Your Profile</h1>
      <p class="text-gray-600">Keep your profile information up-to-date to make the most of your account.</p>
    </div>

    <!-- Form -->
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
      <!-- Sidebar -->
      <div class="col-span-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Profile Details</h2>
        <p class="text-gray-600 mb-2">Update your personal information here. Fields left blank will not overwrite existing data.</p>
      </div>

      <!-- Form Section -->
      <div class="col-span-8">
        <%= form_with(model: @user, url: profile_path, local: true) do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :first_name, "First Name", class: "block text-gray-700 font-medium mb-2" %>
              <%= f.text_field :first_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :last_name, "Last Name", class: "block text-gray-700 font-medium mb-2" %>
              <%= f.text_field :last_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :email, "Email", class: "block text-gray-700 font-medium mb-2" %>
              <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :birthday, "Birthday", class: "block text-gray-700 font-medium mb-2" %>
              <%= f.text_field :birthday, class: "datepicker-date w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
            </div>
          </div>

          <div class="mt-6">
            <%= f.label :password, "New Password (leave blank to keep current)", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
          </div>

          <div class="mt-6">
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-medium mb-2" %>
            <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-300 focus:border-blue-500" %>
          </div>

          <div class="flex justify-end space-x-4 mt-8">
            <%= link_to "Cancel", profile_path, class: "text-gray-500 px-4 py-2 rounded-lg hover:underline" %>
            <%= f.submit "Save Changes", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
