<div class="min-h-[80vh] bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl w-full bg-white rounded-lg shadow-lg p-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900">Your Profile</h1>
      <%= link_to "Edit Profile", edit_profile_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-600 transition" %>
    </div>

    <!-- Profile Details -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Personal Info -->
      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Personal Information</h2>
        <p class="text-gray-600"><strong>First Name:</strong> <%= current_user.first_name || "Not provided" %></p>
        <p class="text-gray-600"><strong>Last Name:</strong> <%= current_user.last_name || "Not provided" %></p>
        <p class="text-gray-600"><strong>Email:</strong> <%= current_user.email %></p>
        <p class="text-gray-600"><strong>Birthday:</strong> <%= current_user.birthday ? current_user.birthday.strftime('%B %d, %Y') : "Not provided" %></p>
      </div>

      <!-- Account Info -->
      <div>
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Account Details</h2>
        <p class="text-gray-600"><strong>Tag:</strong> <%= current_user.tag || "No tag available" %></p>
        <p class="text-gray-600"><strong>Member Since:</strong> <%= current_user.created_at.strftime('%B %d, %Y') %></p>
      </div>
    </div>
  </div>
</div>
